<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center|top|center_vertical"
        android:orientation="vertical"
        android:padding="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.cormabara.pwdmanager.gui.lib.PasswordControl
            android:id="@+id/ctrl_insert_password"
            style="@style/setting_element"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top|center_vertical"
            app:insert_new_password="true">

        </com.cormabara.pwdmanager.gui.lib.PasswordControl>

        <com.cormabara.pwdmanager.gui.lib.PasswordControl
            android:id="@+id/ctrl_confirm_password"
            style="@style/setting_element"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:insert_new_password="true">

        </com.cormabara.pwdmanager.gui.lib.PasswordControl>

        <ImageButton
            android:id="@+id/btn_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_gravity="start"
            android:background="@null"
            android:contentDescription="@string/bnt_setting_save"
            android:gravity="center"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/img_save_and_close_foreground" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>