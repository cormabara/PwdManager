<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/custom_pwd_item">
    <ImageButton
        android:id="@+id/btn_edit_group"
        style="@android:style/Widget.DeviceDefault.ImageButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_weight="0"
        android:contentDescription="@string/button_edit"
        app:srcCompat="@mipmap/img_edit_foreground"
        android:alpha="0.25"
        android:scaleType="fitCenter"
        android:padding="5dp"
        android:background="@drawable/rounded_corner"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#00000000"
        android:orientation="vertical">
        <TextView
            android:id="@+id/pwd_item_name"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/cardview_default_elevation"
            android:maxLines="1"
            android:gravity="center"
            android:background="#00000000"
            style="@style/TextPwdItem_Title"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pwd_item_username"
                style="@style/TextPwdItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#00000000"
                android:gravity="center"
                android:maxLines="1" />

            <TextView
                android:id="@+id/pwd_item_password"
                style="@style/TextPwdItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#00000000"
                android:gravity="center"
                android:maxLines="1" />
        </LinearLayout>
    </LinearLayout>
    <ImageButton
        android:id="@+id/btn_delete"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:contentDescription="@string/button_delete"
        android:src="@mipmap/img_delete_foreground"
        android:alpha="0.25"
        android:radius="5dp"
        android:scaleType="fitCenter"
        android:padding="5dp"
        android:background="@drawable/rounded_corner"/>

</LinearLayout>
