<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/light_2</item>
        <item name="android:textColorSecondary">@color/black_text_color_1</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>
    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item> //you can give your color here. that will change all divider color in your app.
    </style>
    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item> // You can change thickness here.
    </style>
    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="TextPwdItem_Title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#65939E</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="TextPwdItem" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#65939E</item>
        <item name="android:textSize">15dp</item>
    </style>
    <style name="TextInputFilter" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#65939E</item>
        <item name="android:textSize">15dp</item>
    </style>
    <style name="MainTitle">
        <item name="android:textColor">#65939E</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="setting_element">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:radius">14dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:strokeWidth">1</item>
        <item name="android:strokeColor">#CCCCCC</item>
        <item name="android:background">@drawable/custom_border</item>
    </style>
    <style name="setting_element_title">
        <item name="android:textColor">@color/light_1</item>>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="setting_option">
        <item name="android:textColor">@color/light_1</item>>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SearchViewStyle">
        <!-- Gets rid of the search icon
        <item name="searchIcon">@drawable/ic_search</item> -->
        <!-- Gets rid of the "underline" in the text -->
        <item name="queryBackground">@color/white</item>
        <!-- Gets rid of the search icon when the SearchView is expanded -->
        <item name="searchHintIcon">@null</item>
        <!-- The hint text that appears when the user has not typed anything -->
        <item name="queryHint">@string/search_item_by_name</item>
    </style>

    <style name="tag_insert">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="tag_element">
        <item name="android:textSize">12sp</item>
    </style>

</resources>


