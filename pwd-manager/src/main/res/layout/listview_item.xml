<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_margin="5dp"
    android:background="?attr/pwd_item_background"
    android:longClickable="true">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/pwd_item_name"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/cardview_default_elevation"
            android:maxLines="1"
            android:gravity="center"
            android:background="@color/transparent"
            style="@style/TextPwdItem_Title"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/pwd_item_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/transparent"
                android:gravity="center"
                android:maxLines="1"
                style="@style/TextPwdItem_User"/>
            <TextView
                android:id="@+id/pwd_item_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/transparent"
                android:gravity="center"
                android:maxLines="1"
                style="@style/TextPwdItem_Password"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
