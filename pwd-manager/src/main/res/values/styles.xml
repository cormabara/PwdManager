<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="pwd_item_background" format="reference"/>

    <!-- Base application theme. -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">?attr/colorOnSurface</item>
        <item name="android:background">?attr/colorOnSurface</item>
        <item name="android:textColorPrimary">?android:textColorSecondary</item>
        <item name="android:textColorSecondary">?android:textColor</item>
    </style>

    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item> //you can give your color here. that will change all divider color in your app.
    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="FragmentTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="FragmentText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="TextPwdItem_Title" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="TextPwdItem_User" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14dp</item>
    </style>
    <style name="TextPwdItem_Password" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14dp</item>
    </style>
    <style name="Tags_Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">?attr/chipBackgroundColor</item>
        <item name="chipStrokeColor">?attr/chipStrokeColor</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>
    <style name="setting_element">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:radius">14dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:strokeWidth">1</item>
        <item name="android:strokeColor">#CCCCCC</item>
        <item name="android:background">@drawable/custom_border</item>
    </style>
    <style name="setting_element_title">
        <item name="android:textColor">?android:textColorPrimary</item>>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="setting_option">
        <item name="android:textColor">?android:textColorPrimary</item>>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SearchViewStyle">
        <item name="queryBackground">@color/white</item>
        <item name="searchHintIcon">@null</item>
        <item name="queryHint">@string/search_item_by_name</item>
    </style>

    <style name="tag_insert">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="tag_element">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="status_bar_text">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
</resources>


