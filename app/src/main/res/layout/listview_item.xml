<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <ImageButton
        android:id="@+id/btn_edit"
        style="@android:style/Widget.DeviceDefault.ImageButton"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:contentDescription="@string/button_edit"
        android:src="@android:drawable/ic_menu_edit"
        android:alpha="0.25"
        android:background="@drawable/rounded_corner"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/pwd_item_id"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:maxLines="1"
            android:layout_weight="1"
            android:gravity="center"
            style="@style/TextPwdItem"/>
        <TextView
            android:id="@+id/pwd_item_name"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:maxLines="1"
            android:gravity="center"
            style="@style/TextPwdItem"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/pwd_item_username"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:maxLines="1"
            android:layout_weight="1"
            android:gravity="center"/>
        <TextView
            android:id="@+id/pwd_item_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:maxLines="1"
            android:gravity="center"/>
    </LinearLayout>
    <ImageButton
        android:id="@+id/btn_delete"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:contentDescription="@string/button_delete"
        android:src="@android:drawable/ic_menu_delete"
        android:alpha="0.25"
        android:radius="5dp"
        android:background="@drawable/rounded_corner"/>

</LinearLayout>
